          // background-color darken($ui-dark-button--hover-backgroundColor, 15%)
        &:active
          color $ui-solarized-dark-text-color
          background-color $ui-dark-button--active-backgroundColor

  .button
    border none
    color $ui-solarized-dark-text-color
